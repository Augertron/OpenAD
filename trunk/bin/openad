use strict;
use warnings;

use FindBin qw($Script $RealBin);

my $toolsdir = "$RealBin/../tools";
my $realscript = "$toolsdir/$Script/$Script";

# complain if target script is not present
if ( ! -x $realscript ) {
    die "$realscript does not exist or is not executable."
}

my @realcmd = ($realscript, @ARGV);
#print("@realcmd\n");

exec { $realcmd[0] } @realcmd;
die "couldn't exec $realscript: $!"; 
