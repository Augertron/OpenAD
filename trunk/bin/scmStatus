#!/usr/bin/python

import os
import sys
from optparse import OptionParser
OpenADRoot = os.path.abspath(os.path.join(os.path.dirname(__file__),'..'))
sys.path.append(os.path.join(OpenADRoot,'tools','libpythontk'))
import Repository

def netAvail() :
    ret=os.system("ping -c 1 -q terra.mcs.anl.gov > /dev/null 2>&1")
    if (ret == 0) : 
	return True
    else :
	return False	

def changed(repo):
    if (not netAvail()) :
    	sys.stdout.write('\t?')
        sys.stdout.flush()
        return
    if repo.locallyModified() :
        sys.stdout.write('\tC')
        sys.stdout.flush()
    else:
        sys.stdout.write('\t')
        sys.stdout.flush()

def inOut(repo):
    if (not netAvail()) :
    	sys.stdout.write('\t?')
        sys.stdout.flush()
        return
    status=""
    if repo.incoming() :
        status+="I"
    if repo.outgoing() :
        status+="O"
    sys.stdout.write('\t'+status)
    sys.stdout.flush()

def main():
  usage = '%prog [options]\n\t display OpenAD repository status\n\tKind is hg, svn or cvs\n\tR/W: R=read-only, W=writeable\n\tLocal: C=locally changed\n\tRemote: O=outgoing, I=incoming changes'
  opt = OptionParser(usage=usage)
  opt.add_option('-q','--quick',dest='quick',
                 help="don't check for uncommited changes or pending pushes",
                 action='store_true',default=False)
  opt.add_option('-t','--tagsOnly',dest='tagsOnly',
                 help="only list the repository and a version tag",
                 action='store_true',default=False)
  opt.add_option('-l','--localTag',dest='localTag',
                 help="inlcude the local revision tag where applicable (implies -t)",
                 action='store_true',default=False)
  (options, args) = opt.parse_args()
  if (options.localTag):
      options.tagsOnly=True
  doQuick=False
  cwd=os.getcwd()
  if (os.path.basename(cwd) != 'OpenAD'):
      opt.error('the current working directory has to the the OpenAD root directory')
      return -1
  repList=['../OpenAD','angel','boost','OpenADFortTk','OpenAnalysis','xaif','xaifBooster','Open64','xercesc']
  maxNameLength=max([len(r) for r in repList])
  if (not options.tagsOnly): 
      sys.stdout.write('local direct.\tKind\tR/W\tLocal\tRemote\tURL\n')
      sys.stdout.flush()
  try:
      for i in repList:
          repo=Repository.Detect.makeRepo(os.path.join(OpenADRoot,i))
          patchedName=i+"".join([' ' for s in range(len(i),maxNameLength)])
          if options.tagsOnly:
              sys.stdout.write('%s\t%s:%s\n' % (patchedName,repo.kind(),repo.getVersionTag(options.localTag)))
          else:
              sys.stdout.write('%s\t%s\t' % (patchedName,repo.kind()))
              sys.stdout.flush()
              if repo.writeable():
                  sys.stdout.write('W')
                  sys.stdout.flush()
                  if (not options.quick):
                      changed(repo)
                      inOut(repo)
              else:
                  sys.stdout.write('R\t')
                  sys.stdout.flush()
                  if (not options.quick):
                      inOut(repo)
              sys.stdout.write('\t%s\n' % repo.getUrl().strip())
          sys.stdout.flush()
          os.chdir(cwd)
  except RuntimeError, e:
      print 'caught excetion: ',e
      return -1

if __name__ == "__main__":
  sys.exit(main())
